# =============================================================================
# DESPERADOS DESTINY SERVER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=5001

# -----------------------------------------------------------------------------
# Database - MongoDB
# -----------------------------------------------------------------------------
# For Docker: mongodb://admin:password@mongodb:27017/desperados-destiny?authSource=admin
# For Local:  mongodb://localhost:27017/desperados-destiny
MONGODB_URI=mongodb://localhost:27017/desperados-destiny
MONGODB_TEST_URI=mongodb://localhost:27017/desperados-destiny-test

# -----------------------------------------------------------------------------
# Cache - Redis
# -----------------------------------------------------------------------------
# For Docker: redis://:redispassword@redis:6379
# For Local:  redis://localhost:6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Authentication - JWT
# -----------------------------------------------------------------------------
# IMPORTANT: Generate secure random strings for production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=7d

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# -----------------------------------------------------------------------------
# Error Tracking - Sentry (Optional)
# -----------------------------------------------------------------------------
# Get your DSN from: https://sentry.io -> Settings -> Projects -> Client Keys
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# EMAIL_FROM=noreply@desperados-destiny.com

# -----------------------------------------------------------------------------
# Game Configuration (Optional - override defaults)
# -----------------------------------------------------------------------------
MAX_PLAYERS_PER_LOBBY=100
GAME_TICK_RATE=30

# -----------------------------------------------------------------------------
# Feature Flags (Development)
# -----------------------------------------------------------------------------
# Set to true to disable MongoDB transactions (for single-node dev MongoDB)
# DISABLE_TRANSACTIONS=true
