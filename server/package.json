{
  "name": "desperados-destiny-server",
  "version": "1.0.0",
  "description": "Backend server for Desperados Destiny MMORPG",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:comprehensive": "jest --config jest.comprehensive.config.js --runInBand",
    "test:all-systems": "jest --config jest.comprehensive.config.js tests/comprehensive/allSystems.exhaustive.test.ts --runInBand",
    "test:all-locations": "jest --config jest.comprehensive.config.js tests/comprehensive/allLocations.exhaustive.test.ts --runInBand",
    "test:all-actions": "jest --config jest.comprehensive.config.js tests/comprehensive/allActions.exhaustive.test.ts --runInBand",
    "test:orchestrator": "jest --config jest.comprehensive.config.js tests/comprehensive/runAll.test.ts --runInBand",
    "validate:all": "node runComprehensiveTests.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mmorpg",
    "game",
    "backend",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@desperados/shared": "file:../shared",
    "@sentry/node": "^10.27.0",
    "@sentry/profiling-node": "^10.27.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/bull": "^3.15.9",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.34.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "redis": "^4.6.12",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
