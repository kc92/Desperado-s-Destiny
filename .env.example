# =============================================================================
# DESPERADOS DESTINY - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=5000

# -----------------------------------------------------------------------------
# DATABASE - MongoDB
# -----------------------------------------------------------------------------
# For Docker: mongodb://admin:password@mongodb:27017/desperados-destiny?authSource=admin
# For Local:  mongodb://localhost:27017/desperados-destiny
MONGODB_URI=mongodb://admin:password@mongodb:27017/desperados-destiny?authSource=admin
MONGO_USERNAME=admin
MONGO_PASSWORD=password

# -----------------------------------------------------------------------------
# CACHE - Redis
# -----------------------------------------------------------------------------
# For Docker: redis://:redispassword@redis:6379
# For Local:  redis://localhost:6379
REDIS_URL=redis://:redispassword@redis:6379
REDIS_PASSWORD=redispassword

# -----------------------------------------------------------------------------
# AUTHENTICATION - JWT
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure random string for production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-please-generate-a-random-string
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-also-change-this
JWT_REFRESH_EXPIRE=30d

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5173

# -----------------------------------------------------------------------------
# FRONTEND - Vite Environment Variables
# -----------------------------------------------------------------------------
# These MUST start with VITE_ to be available in the frontend
VITE_API_URL=http://localhost:5000
VITE_WS_URL=http://localhost:5000

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# -----------------------------------------------------------------------------
# EMAIL (Optional - for future features)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@desperados-destiny.com

# -----------------------------------------------------------------------------
# PAYMENT (Optional - for future monetization)
# -----------------------------------------------------------------------------
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# -----------------------------------------------------------------------------
# MONITORING - Sentry Error Tracking
# -----------------------------------------------------------------------------
# Server-side Sentry DSN (for backend error tracking)
# Get your DSN from: https://sentry.io/settings/[organization]/projects/[project]/keys/
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Client-side Sentry DSN (for frontend error tracking)
# Must start with VITE_ to be available in the frontend
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Optional: Release version for tracking (auto-generated if not set)
# SENTRY_RELEASE=desperados-destiny@1.0.0
# VITE_SENTRY_RELEASE=desperados-destiny-client@1.0.0

# Optional: Disable Sentry in development
# SENTRY_DISABLE_IN_DEV=true
# VITE_SENTRY_DISABLE_IN_DEV=true

# Optional: Application version for client
# VITE_APP_VERSION=1.0.0

# Optional: Environment name override (defaults to NODE_ENV)
# VITE_ENV=development

# Optional: Other monitoring services
# NEW_RELIC_LICENSE_KEY=xxxxx

# -----------------------------------------------------------------------------
# GAME CONFIGURATION (Optional - override defaults)
# -----------------------------------------------------------------------------
# MAX_ENERGY=150
# ENERGY_REGEN_RATE=1
# ENERGY_REGEN_INTERVAL=300000
# BASE_JAIL_TIME=3600000
# MAX_GANG_SIZE=20

# -----------------------------------------------------------------------------
# SESSION (Optional)
# -----------------------------------------------------------------------------
SESSION_SECRET=your-session-secret-change-this
SESSION_EXPIRE=86400000

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# -----------------------------------------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_CHAT=true
ENABLE_PVP=true
MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# ADVERTISING - Google AdSense
# -----------------------------------------------------------------------------
# Get these from your Google AdSense dashboard after approval
# Publisher ID: Found in AdSense > Account > Account Information
VITE_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX

# Ad Unit IDs: Create in AdSense > Ads > By ad unit
# Leaderboard (728x90) - displayed below header
VITE_AD_SLOT_LEADERBOARD=1234567890

# Medium Rectangle (300x250) - for sidebar/content areas
VITE_AD_SLOT_MEDIUM_RECT=1234567891

# -----------------------------------------------------------------------------
# ADVERTISING - Google IMA (Video Ads for Rewards)
# -----------------------------------------------------------------------------
# For rewarded video ads, you need Google Ad Manager
# Create an ad tag URL in Ad Manager > Inventory > Ad units
# VITE_GOOGLE_IMA_AD_TAG_URL=https://pubads.g.doubleclick.net/gampad/ads?...
