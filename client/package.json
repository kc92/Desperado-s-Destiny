{
  "name": "desperados-destiny-client",
  "version": "1.0.0",
  "description": "Desperados Destiny - Browser-based MMORPG Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:strict": "tsc --noEmit && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "jest --config jest.e2e.config.cjs",
    "test:e2e:headed": "HEADLESS=false jest --config jest.e2e.config.cjs",
    "test:e2e:watch": "jest --config jest.e2e.config.cjs --watch",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:report": "playwright show-report tests/playwright/reports",
    "test:comprehensive:e2e": "tsx tests/playtests/comprehensive/runComprehensiveE2E.ts",
    "test:comprehensive:e2e:headless": "HEADLESS=true tsx tests/playtests/comprehensive/runComprehensiveE2E.ts",
    "test:locations:e2e": "tsx -e \"import {AllLocationsE2EBot} from './tests/playtests/comprehensive/AllLocationsE2E.js'; const bot = new AllLocationsE2EBot({name:'LocationTest',username:'test',email:'test@test.com',password:'Test123!',characterName:'Tester'}); bot.runTests();\"",
    "test:actions:e2e": "tsx -e \"import {AllActionsE2EBot} from './tests/playtests/comprehensive/AllActionsE2E.js'; const bot = new AllActionsE2EBot({name:'ActionTest',username:'test',email:'test@test.com',password:'Test123!',characterName:'Tester'}); bot.runTests();\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "playtest": "tsx tests/playtests/runPlaytests.ts all",
    "playtest:combat": "tsx tests/playtests/runPlaytests.ts combat",
    "playtest:economy": "tsx tests/playtests/runPlaytests.ts economy",
    "playtest:social": "tsx tests/playtests/runPlaytests.ts social",
    "test:adversarial": "tsx tests/playtests/advanced/runAdversarialBot.ts",
    "test:adversarial:headless": "HEADLESS=true tsx tests/playtests/advanced/runAdversarialBot.ts",
    "example:exploits": "tsx tests/playtests/advanced/ExploitTesting.example.ts",
    "bot:autonomous": "tsx tests/playtests/autonomous/runAutonomousLevelerBot.ts",
    "bot:autonomous:headless": "HEADLESS=true tsx tests/playtests/autonomous/runAutonomousLevelerBot.ts"
  },
  "dependencies": {
    "@desperados/shared": "file:../shared",
    "@sentry/react": "^10.27.0",
    "axios": "^1.6.2",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.6.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.19.25",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest-html-reporters": "^3.1.7",
    "jest-puppeteer": "^11.0.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "puppeteer": "^24.31.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
